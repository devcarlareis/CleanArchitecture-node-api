{
  "name": "cleanarchitecture-node-api",
  "version": "1.0.0",
  "description": "API em Node.js desenvolvida durante o curso de Clean Architecture e TDD.",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent --colors --noStackTrace --passWithNoTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "teststaged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devcarlareis/CleanArchitecture-node-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/devcarlareis/CleanArchitecture-node-api/issues"
  },
  "homepage": "https://github.com/devcarlareis/CleanArchitecture-node-api#readme",
  "devDependencies": {
    "husky": "^5.2.0",
    "jest": "^27.3.1",
    "lint-staged": "^10.5.4",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "mrm": "^2.6.2",
    "validator": "^13.7.0"
  }
}
